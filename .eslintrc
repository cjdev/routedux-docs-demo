{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "browser": true,
        "node": true,
        "jest": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "settings": {
        "react": {
            "version": "16.0"
        }
    },
    "rules": {
        "no-unused-vars": ["error", {
            "argsIgnorePattern": "(^[_][_]*$)|(^.$)",
            "varsIgnorePattern": "(^[_][_]*$)|(^R$)"
        }],
        curly: "error"
    }
}